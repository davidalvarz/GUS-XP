generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserProfile {
  id             String   @id @default(cuid())
  discordId      String   @unique
  xp             Int      @default(0)
  robloxUsername String?  @default("")
  isGeneral      Boolean  @default(false)
  generalRank    String?  @default("")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model StaffMember {
  id        String    @id @default(cuid())
  discordId String    @unique
  role      StaffRole @default(ADMIN)
  createdAt DateTime  @default(now())
 updatedAt DateTime @default(now()) @updatedAt
}

enum StaffRole {
  ADMIN
  HEAD_ADMIN
}

model ApprovalRequest {
  id            String         @id @default(cuid())
  requestedById String
  targetUserId  String
  amount        Int
  reason        String?        @default("")
  status        ApprovalStatus @default(PENDING)
  reviewedById  String?        @default("")
  reviewedAt    DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

enum ApprovalStatus {
  PENDING
  APPROVED
  DENIED
}
